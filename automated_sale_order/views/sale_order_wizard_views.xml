<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="sale_order_wizard_view_form" model="ir.ui.view">
        <field name="name">sale.order.wizard.form</field>
        <field name="model">sale.order.wizard</field>
        <field name="arch" type="xml">
            <form string="Automatic sale order">
                <group class="oe_title">
                    <field name="name"/>
                    <field name="price"/>
                    <field name="partner_id"/>
                    <field name="quantity"/>
                </group>
                <footer>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                    <button name="confirm_button" string="Confirm" type="object"/>
                </footer>
            </form>
        </field>
    </record>


</odoo>